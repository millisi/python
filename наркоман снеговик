def snowMan(x,y):
    circle (x,y-40,30)
    circle (x,y,50)
    circle (x,y+60,70)
x=200
y=200
spreed = 3
def setup ():
    size (500,500)
def draw():
    global x,y, spreed
    snowMan(x,y)
    if keyPressed:
        if keyCode == LEFT:
            x -= spreed
        if keyCode == RIGHT:
            x += spreed
        if keyCode == UP:
            y -= spreed
        if keyCode == DOWN:
            y += spreed
